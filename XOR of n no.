#include<bits/stdc++.h>
uing namespace std;
/*--------------------------------------------------------------------------*/
int xor_no(int n)
{
    if(n % 4 == 0)
     return n;
    if(n % 4 == 1)
     return 1;
    if(n % 4 == 2)
     return n+1;
    else
     return 0;
}

int main()
{
   int n,p;
   cin>>n;
        p=xor_no(n);
   cout<<p;
 return 0;
}

/*------------------------------------------------------------------------*/
