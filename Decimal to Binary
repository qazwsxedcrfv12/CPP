#include<bits/stdc++.h>
using namespace std;

/*-------------------------------------------Using Recursion-----------------------------------------------*/
void decimal_to(int n)
{
    if(n>1)
     bin(n>>1);
   cout<<n%2;
}

int main()
{
   int n;
   cin>>n;
   decimal_to(n);
  return 0;
}
